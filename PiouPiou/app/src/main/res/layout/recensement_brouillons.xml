<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="253dp"
    android:layout_height="334dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:gravity="left"
    android:radius="10dp"
    android:shadowColor="@color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_default="wrap"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_default="wrap">

    <TextView
        android:id="@+id/date"
        android:layout_width="223dp"
        android:layout_height="25dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:text="@string/date"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberBird_draft"
        android:layout_width="204dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:background="@color/button_gray"
        android:text="Nombre : 4"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/direction_draft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/direction_draft"
        android:layout_width="204dp"
        android:layout_height="38dp"
        android:layout_marginBottom="4dp"
        android:background="@color/button_gray"
        android:text="Direction : sud-est"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/weather_draft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/weather_draft"
        android:layout_width="204dp"
        android:layout_height="38dp"
        android:layout_marginBottom="4dp"
        android:background="@color/button_gray"
        android:text="Météo : nuageux"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/huntable_draft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/huntable_draft"
        tools:layout_editor_absoluteY="236dp"
        android:layout_width="204dp"
        android:layout_height="38dp"
        android:background="@color/button_gray"
        android:text="@string/zone_chassable_oui"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/button5"
        android:layout_width="204dp"
        android:layout_height="38dp"
        android:layout_marginBottom="4dp"
        android:background="@color/button_gray"
        android:text="Espèces"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/numberBird_draft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />


</androidx.constraintlayout.widget.ConstraintLayout>