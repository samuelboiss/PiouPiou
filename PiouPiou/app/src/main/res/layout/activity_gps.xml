<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GPSActivity">


    <fragment
        android:id="@+id/gpsLocation"
        android:name="com.example.pioupioy.GPSFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:background="#F3F1F1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        tools:layout="@layout/fragment_gps" />

    <fragment
        android:id="@+id/map"
        android:name="com.example.pioupioy.MapFragment"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_weight="15"
        tools:context=".MainActivity"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation"
        android:name="com.example.pioupioy.NavigationFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:layout="@layout/fragment_navigation" />

</LinearLayout>

