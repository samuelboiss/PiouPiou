<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    android:background="@color/background_green">

    <LinearLayout
        android:layout_width="214dp"
        android:layout_height="57dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="628dp"
        android:background="@color/button_gray"
        android:textColor="@color/black"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ajouter"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        android:src="@drawable/pioupiou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ajouter_un_recensement"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginTop="144dp"
        android:background="@color/button_gray"
        android:drawablePadding="10dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Nouveaux recensements"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_recensements"
        android:layout_width="316dp"
        android:layout_height="290dp"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ajouter_un_recensement">

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:autofillHints="date"
            android:background="@color/button_gray"
            android:gravity="center"
            android:hint="Date"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="date"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/espece"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:autofillHints="Espece"
            android:background="@color/button_gray"
            android:gravity="center"
            android:hint="Espece"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/date"
            />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:autofillHints="Nombre"
            android:background="@color/button_gray"
            android:gravity="center"
            android:hint="Nombre"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/espece"
            tools:layout_editor_absoluteX="0dp" />

        <Spinner
            android:id="@+id/spinner_direction"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:background="@color/button_gray"
            android:gravity="center"
            android:prompt="@string/direction"
            android:spinnerMode="dialog"
            android:entries="@array/direction_list"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/nombre"
            tools:layout_editor_absoluteX="0dp" />


        <Spinner
            android:id="@+id/spinner_meteo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:background="@color/button_gray"
            android:gravity="center"
            android:prompt="@string/meteo"
            android:spinnerMode="dialog"
            android:entries="@array/meteo_list"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_direction"
            tools:layout_editor_absoluteX="0dp" />

        <Spinner
            android:id="@+id/spinner_huntable"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:background="@color/button_gray"
            android:gravity="center"
            android:prompt="@string/huntable_spinner"
            android:spinnerMode="dialog"
            android:entries="@array/huntable_list"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_meteo"
            tools:layout_editor_absoluteX="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/enregistrer"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/button_gray"
        android:text="Enregistrer"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/retour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_recensements"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/retour"
        android:layout_width="129dp"
        android:layout_height="38dp"
        android:backgroundTint="@color/button_gray"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="Retour"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="653dp" />

</androidx.constraintlayout.widget.ConstraintLayout>