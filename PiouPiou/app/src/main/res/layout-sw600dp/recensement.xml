<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    android:background="@color/background_green">

    <LinearLayout
        android:id="@+id/titre_ajouter_recensement"
        android:layout_width="630dp"
        android:layout_height="115dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="628dp"
        android:background="@color/button_gray"
        android:textColor="@color/black"

        app:layout_constrainedHeight="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titre_ajouter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ajouter"
            android:textColor="@color/black"
            android:textSize="45sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="145dp"
        android:layout_height="115dp"
        android:background="@color/white"
        android:src="@drawable/pioupiou"
        app:layout_constraintStart_toEndOf="@id/titre_ajouter_recensement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/titre_ajouter_recensement" />


    <LinearLayout
        android:id="@+id/ajouter_un_recensement"
        android:layout_width="750dp"
        android:layout_height="90dp"
        android:background="@color/button_gray"
        android:drawablePadding="10dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintBottom_toTopOf="@+id/edit_recensements"
        tools:layout_editor_absoluteY="144dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Nouveaux recensements"
            android:textColor="@color/black"
            android:textSize="40sp" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_recensements"
        android:layout_width="750dp"
        android:layout_height="550dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/enregistrer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ajouter_un_recensement">

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:autofillHints="date"
            android:background="@color/button_gray"
            android:gravity="center"
            android:hint="Date"
            android:inputType="date"
            android:textColor="@color/black"
            android:textSize="35sp"
            tools:layout_editor_absoluteY="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/espece"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/espece"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:autofillHints="Espece"
            android:background="@color/button_gray"
            android:gravity="center"
            android:hint="Espece"
            android:textColor="@color/black"
            android:textSize="35sp"
            tools:layout_editor_absoluteY="55dp"
            app:layout_constraintTop_toBottomOf="@+id/date"
            app:layout_constraintBottom_toTopOf="@+id/nombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:autofillHints="Nombre"
            android:background="@color/button_gray"
            android:gravity="center"
            android:hint="Nombre"
            android:textColor="@color/black"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="102dp"
            app:layout_constraintTop_toBottomOf="@+id/espece"
            app:layout_constraintBottom_toTopOf="@+id/spinner_direction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Spinner
            android:id="@+id/spinner_direction"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/button_gray"
            android:entries="@array/direction_list"
            android:gravity="center"
            android:prompt="@string/direction"
            android:spinnerMode="dialog"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/nombre"
            app:layout_constraintBottom_toTopOf="@+id/spinner_meteo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Spinner
            android:id="@+id/spinner_meteo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/button_gray"
            android:entries="@array/meteo_list"
            android:gravity="center"
            android:prompt="@string/meteo"
            android:spinnerMode="dialog"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/spinner_direction"
            app:layout_constraintBottom_toTopOf="@+id/spinner_huntable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Spinner
            android:id="@+id/spinner_huntable"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/button_gray"
            android:entries="@array/huntable_list"
            android:gravity="center"
            android:prompt="@string/huntable_spinner"
            android:spinnerMode="dialog"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_meteo"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/enregistrer"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/button_gray"
        android:text="Enregistrer"
        android:textSize="30sp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="563dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_recensements"
        app:layout_constraintBottom_toTopOf="@+id/retour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/retour"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/button_gray"
        android:drawablePadding="10dp"
        android:textSize="28sp"
        android:gravity="center"
        android:text="Retour"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>